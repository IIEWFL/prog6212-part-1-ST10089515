<Window x:Class="ModuleApp.SemesterDetails"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ModuleApp"
        mc:Ignorable="d"
        Title="SemesterDetails" Height="450" Width="800">
    <Grid>
        <Label Content="Semester Details" HorizontalAlignment="Left" Margin="23,19,0,0" VerticalAlignment="Top" Width="111"/>
        <Label Content="ENTER NUMBER OF WEEKS" HorizontalAlignment="Left" Margin="23,107,0,0" VerticalAlignment="Top" Width="155"/>
        <Label Content=" START DATE " HorizontalAlignment="Left" Margin="23,140,0,0" VerticalAlignment="Top" Width="155"/>
        <Button x:Name="btnBack" Content="BACK" HorizontalAlignment="Left" Margin="311,288,0,0" VerticalAlignment="Top" Width="100" Click="back"/>
        <Button x:Name="btnSave" Content="ENTER" HorizontalAlignment="Left" Margin="628,198,0,0" VerticalAlignment="Top" Width="117" Click="save" Height="23"/>
        <TextBox x:Name="txtWeeks" HorizontalAlignment="Left" Margin="590,120,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="155"/>
        <TextBox x:Name="txtDate" HorizontalAlignment="Left" Margin="590,153,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="155"/>

    </Grid>
</Window>
